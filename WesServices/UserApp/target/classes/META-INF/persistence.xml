<?xml version="1.0" encoding="UTF-8"?>

<persistence version="2.1"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">

    <persistence-unit name="USER_APPLICATION_PERSISTENCE" transaction-type="RESOURCE_LOCAL">

        <!-- Persistence provider -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Entity classes -->
        <class>just.education.messaging_app.model.User</class>
        <class>just.education.messaging_app.model.Follower</class>
        <class>just.education.messaging_app.model.Friend</class>
        <class>just.education.messaging_app.model.Message</class>
        <class>just.education.messaging_app.model.Post</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5454/users" />
            <property name="javax.persistence.jdbc.user" value="db_root" />
            <property name="javax.persistence.jdbc.password" value="db_root" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL95Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
        </properties>

    </persistence-unit>

</persistence>